<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>FirebaseAuthenticationDotNetCore.Services</RootNamespace>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Firebase.Auth" Version="1.0.0" />
      <PackageReference Include="FirebaseAdmin" Version="2.4.0" />
      <PackageReference Include="JWT" Version="10.1.1" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Properties\launchSettings.json" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\FirebaseAuthenticationDotNetCore.Common\FirebaseAuthenticationDotNetCore.Common.csproj" />
      <ProjectReference Include="..\FirebaseAuthenticationDotNetCore.Models\FirebaseAuthenticationDotNetCore.Models.csproj" />
    </ItemGroup>

</Project>
